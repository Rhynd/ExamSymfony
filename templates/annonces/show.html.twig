{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1>Annonces</h1>

    <table class="table">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <th>Id</th>
                    <td>{{ annonce.id }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Titre</th>
                <td>{{ annonce.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ annonce.images }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ annonce.localisation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_annonces_index') }}">back to list</a>


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_annonces_edit', {'id': annonce.id}) }}">edit</a>

        {{ include('annonces/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
